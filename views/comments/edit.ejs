<%- include('../partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit Comment</div>
  <form
    class="ui form"
    action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label>Comment</label>
      <input
        type="text"
        name="comment[text]"
        value="<%= comment.text %>"
        required
      />
    </div>
    <button class="ui big violet basic button">Submit</button>
  </form>
  <a href="/blogs/<%= blog_id %>">Go Back</a>
</div>

<%- include('../partials/footer') %>
