<%- include('../partials/header') %>

<div class="ui main text container segment">
  <div class="ui huge header">Add New Comment to <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>/comments" method="POST">
    <div class="field">
      <label>Comment</label>
      <input type="text" name="comment[text]" required />
    </div>
    <button class="ui big violet basic button">Submit</button>
  </form>
  <a href="/blogs/<%= blog._id %>">Go Back</a>
</div>

<%- include('../partials/footer') %>
